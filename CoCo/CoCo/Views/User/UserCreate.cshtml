@model CoCo.ViewModel.UserViewModel.RegisterViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<section class="container-fluid" style="background-color: #7F9AC0">
    <div class="row vh-100 align-items-center justify-content-center">
        <div class="col-sm-8 col-md-6 col-lg-4 bg-light px-5 py-4 rounded">
            <div class="row justify-content-center">
                <img src="~/image/logo.png" alt="logo" class="w-25" />
            </div>
            <div class="text-center mb-4">
                <h2>Register</h2>
            </div>
            <form asp-controller="User" asp-action="UserCreate" method="post">
                <div class="form-group mb-4">
                    <label asp-for="UserName" class="mb-2">Name</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Email" class="mb-2"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Password" class="mb-2"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="mb-2"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
            <div class="text-center">
                already have account? &nbsp;<a href="@Url.Action("UserLogin","User")" class="text-decoration-none">Log In</a>
            </div>
        </div>
    </div>
</section>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

