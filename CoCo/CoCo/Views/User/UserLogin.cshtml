@model CoCo.ViewModel.UserViewModel.LoginViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<section class="container-fluid" style="background-color: #7F9AC0">
    <div class="row vh-100 align-items-center justify-content-center">
        <div class="col-sm-8 col-md-6 col-lg-4 bg-light px-5 py-4 rounded">
            <div class="row justify-content-center">
                <img src="~/image/logo.png" alt="finance logo" class="w-25" />
            </div>
            <div class="text-center mb-4">
                <h2>Sign In</h2>
            </div>
            <form asp-controller="User" asp-action="UserLogin" method="post">
                <div class="form-group mb-4">
                    <label asp-for="EmailOrUserName" class="mb-2">Email or Name</label>
                    <input asp-for="EmailOrUserName" class="form-control" />
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="mb-2"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-50">Sign In</button>
                </div>
            </form>
            <div class="text-center mb-2">
                <a href="@Url.Action("UserForgotPassword","User")" class="text-decoration-none">forgot password</a>
            </div>
            <div class="text-center">
                have not account yet? &nbsp;<a href="@Url.Action("UserCreate","User")" class="text-decoration-none">Register</a>
            </div>
        </div>
    </div>
</section>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
