@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<section class="container-fluid" style="background-color: #7F9AC0">
    <div class="row vh-100 align-items-center justify-content-center">
        <div class="col-sm-8 col-md-6 col-lg-4 bg-light px-5 py-4 rounded">
            <div class="row justify-content-center">
                <img src="~/image/logo.png" alt="finance logo" class="w-25" />
            </div>
            <div class="text-center mb-4">
                <h2>Email Verification</h2>
            </div>
            <form asp-controller="User" asp-action="UserForgotPassword" method="post">
                <div class="form-group mb-4">
                    <label for="Email">Email Address</label>
                    <input type="email" name="Email" class="form-control" required />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-50">Send OTP</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

